<center><h1><%= @user.email %></h1></center>
<div>
  <%= form_with( model:@user, url:user_path, method: :put, local: true) do |f| %>
    <div class="card" style="width: 40rem;">
      <div class="card-body">
        <div class="form-group">
          <label>User name</label>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.label :avatar %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.file_field :avatar  %>
          </div>
        </div>
        <div class="form-group">
          <label>User description</label>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group"  style="padding-top: 1rem;">
          <button type="submit"  class="btn btn-primary">Update</button>
            <a href="<%= user_path %>" class="btn btn-primary">Back</a>
        </div>
      </div>
    </div>
    <br>
  <% end %>
</div>